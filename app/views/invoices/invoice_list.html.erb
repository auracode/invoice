<p>View the invoices for customers</p>
<p>
  Download 
  <%= link_to "Excel", invoices_invoice_list_path(format: "xls")%>
</p>

<table border="1" cellpadding="5" cellspacing="5">
  <tr>
    <th>Name</th>
    <%["July","Aug","Sept","Oct","Nov","Dec","Jan","Feb","March"].each do |tt| %>
    <th><%= tt %></th>

    <% end %>
  </tr>
 
  <% @customers.each do |customer| %>
    <% client = Hash[:billing_name => customer["name"], :billing_address => customer["address"], :billing_gstid => customer["gstid"], :quantity => customer["machine_count"], :rate => customer["plan"], :consumer_no => customer["consumer_no"]] %>
      
    <tr>
      <td><%= customer["name"] %></td>
      
      <% [7,8,9,10,11,12,1,2,3].each do |month|%>
      <td>
          <% @invoices.where(:consumer_no => customer["consumer_no"], :month => month).map { |e| e.invoice_number }.each do | m | # , :consumer_no => customer["consumer_no"]%>
            <% @invoice = Invoice.where(:invoice_number => m).first %>
            <%if @invoice.billing_type == "false" %>
            <%= link_to "#{ m },", challan_invoice_path(@invoice.id) %>
            <% else %>
            <%= link_to "#{ m },",  invoice_path(@invoice.id) %>
            <% end %>
      <% end %>
      </td>
      <% end %>
      </tr>
  <% end %>
</table>
